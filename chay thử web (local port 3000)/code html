<body>

    <h2>Web T·ª´ ƒêi·ªÉn (Trie Tree) üöÄ</h2>

    <div>
        <input type="text" id="wordInput" placeholder="Nh·∫≠p t·ª´ c·∫ßn th√™m">
        <button onclick="addWord()">Th√™m t·ª´</button>
    </div>

    <div>
        <input type="text" id="searchInput" placeholder="Nh·∫≠p t·ª´ c·∫ßn t√¨m" oninput="getSuggestions()">
        <button onclick="searchWord()">T√¨m ki·∫øm</button>
    </div>

    <div id="suggestions" class="hidden"></div>

    <div id="result"></div>

    <script>
        async function addWord() {
            let word = document.getElementById("wordInput").value.trim();
            if (!word) {
                alert("Vui l√≤ng nh·∫≠p t·ª´ h·ª£p l·ªá!");
                return;
            }

            let response = await fetch("/add_word", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ word })
            });
            let data = await response.json();
            alert(data.message);
        }

        async function searchWord() {
            let word = document.getElementById("searchInput").value.trim();
            if (!word) {
                alert("Vui l√≤ng nh·∫≠p t·ª´ c·∫ßn t√¨m!");
                return;
            }

            let response = await fetch(`/search?word=${word}`);
            let data = await response.json();

            let resultDiv = document.getElementById("result");
            if (!data.exists) {
                resultDiv.innerHTML = `<p style="color:red;">‚ùå ${data.message}</p>`;
            } else {
                resultDiv.innerHTML = `
                    <h3>K·∫øt qu·∫£ t√¨m ki·∫øm:</h3>
                    <p><b>T·ª´:</b> ${data.data.word}</p>
                    <p><b>Lo·∫°i t·ª´:</b> ${data.data.types.join(", ")}</p>
                    <p><b>ƒê·ªãnh nghƒ©a:</b> ${data.data.meanings.join("; ")}</p>
                    <p><b>V√≠ d·ª•:</b> ${data.data.examples.join("; ")}</p>
                `;
            }
        }

        async function getSuggestions() {
            let prefix = document.getElementById("searchInput").value.trim();
            let suggestionsDiv = document.getElementById("suggestions");

            if (prefix.length < 2) {
                suggestionsDiv.classList.add("hidden");
                return;
            }

            let response = await fetch(`/autocomplete?prefix=${prefix}`);
            let data = await response.json();

            if (data.suggestions.length > 0) {
                suggestionsDiv.innerHTML = `<b>G·ª£i √Ω:</b> ${data.suggestions.join(", ")}`;
                suggestionsDiv.classList.remove("hidden");
            } else {
                suggestionsDiv.classList.add("hidden");
            }
        }
    </script>

