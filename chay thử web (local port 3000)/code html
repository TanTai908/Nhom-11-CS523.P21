    <p id="result"></p>

    <script>
        async function addWord() {
            let word = document.getElementById("wordInput").value;
            let response = await fetch("/add_word", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ word })
            });
            let data = await response.json();
            alert(data.message);
        }

        async function searchWord() {
            let word = document.getElementById("searchInput").value;
            let response = await fetch(`/search?word=${word}`);
            let data = await response.json();
            document.getElementById("result").innerText = data.exists 
                ? `âœ… Tá»« "${word}" cÃ³ trong tá»« Ä‘iá»ƒn!` 
                : `âŒ Tá»« "${word}" khÃ´ng cÃ³ trong tá»« Ä‘iá»ƒn!`;
        }
    </script>
